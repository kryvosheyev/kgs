<table class="table table-bordered">
  <th>Title</th>
  <th>Description</th>
  <th>Actions</th>
    <tr>
      <td> <%= @post.title %> </td>
      <td> <%= @post.description %> </td>
      <td><%= link_to 'Edit', edit_post_path(@post)%> |
        <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?'} %></td>
    </tr>
</table>
